{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": ["es2020"],
    "target": "es2019",
    "outDir": "./build",
    "sourceMap": true,
    "strict": true,
    "typeRoots": [
      "./src/@types", "./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "./src/@types/*"]
}
