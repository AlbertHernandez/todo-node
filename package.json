{
    "author": "Albert Hernandez <alberthernandezdev@gmail.com>",
    "dependencies": {
        "@hapi/joi": "^17.1.1",
        "@sentry/node": "^6.2.5",
        "awilix": "^4.3.3",
        "axios": "^0.21.1",
        "kcors": "^2.2.2",
        "koa": "^2.13.1",
        "koa-bodyparser": "^4.3.0",
        "koa-helmet": "^6.1.0",
