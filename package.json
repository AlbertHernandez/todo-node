{
  "name": "todo-node",
  "version": "1.0.0",
  "description": "Todo application using node",
  "main": "index.js",
  "scripts": {
    "start": "node build/service/index.js",
    "watch": "nodemon --exec node --inspect=0.0.0.0:56745 -r ts-node/register src/index.ts",
    "build": "rm -rf ./build && ./node_modules/typescript/bin/tsc -b --verbose",
    "lint": "eslint 'src/**/*.{js,ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{js,ts,tsx}' --fix",
    "prepare": "husky install",
    "database:feed": "nodemon --exec node --inspect=0.0.0.0:56745 -r ts-node/register src/scripts/feed-database/index.ts"
  },
  "engines": {
    "node": "14.x"
  },
  "keywords": [
    "todo",
    "graphql",
    "node"
  ],
  "author": "Albert Hernandez <alberthernandezdev@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/hapi__joi": "^17.1.6",
    "@types/joi": "^17.2.3",
    "@types/kcors": "^2.2.3",
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.1",
    "@types/mongoose": "^5.10.4",
    "@types/node": "^14.0.10",
    "@types/pino": "^6.3.6",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^6.0.0",
    "lint-staged": "^10.2.7",
    "nodemon": "^2.0.4",
    "pino-pretty": "^4.7.1",
    "prettier": "^2.2.1",
    "ts-node": "^8.10.2",
    "typescript": "^4.2.3"
  },
  "lint-staged": {
    "*.(js|ts)": [
      "npm run lint:fix"
    ]
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "awilix": "^4.3.3",
    "kcors": "^2.2.2",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.1.0",
    "koa-ratelimit": "^5.0.0",
    "koa-requestid": "^2.1.0",
    "koa-router": "^10.0.0",
    "mongoose": "^5.12.3",
    "pino": "^6.11.2"
  }
}
