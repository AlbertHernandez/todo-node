        "mongoose": "^5.12.3",
        "pino": "^6.11.2",
        "uuid": "^8.3.2"
    },
    "description": "Todo application using node",
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@types/dotenv": "^8.2.0",
        "@types/hapi__joi": "^17.1.6",
        "@types/joi": "^17.2.3",
        "@types/kcors": "^2.2.3",
        "@types/koa": "^2.11.3",
        "@types/koa-bodyparser": "^4.3.0",
        "@types/koa-router": "^7.4.1",
        "@types/node": "^14.0.10",
        "@types/pino": "^6.3.6",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^3.1.0",
        "eslint": "^7.24.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-config-standard-with-typescript": "^20.0.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-promise": "^4.3.1",
        "husky": "^6.0.0",
        "lint-staged": "^10.2.7",
        "nodemon": "^2.0.4",
        "pino-pretty": "^4.7.1",
        "prettier": "^2.2.1",
        "ts-node": "^8.10.2",
        "ts-standard": "^10.0.0",
        "typescript": "^4.2.3"
    },
    "engines": {
        "node": "14.x"
    },
    "keywords": [
        "todo",
        "node"
    ],
    "license": "MIT",
    "lint-staged": {
        "*.(js|ts)": [
            "npm run lint:fix"
        ]
    },
    "main": "index.js",
    "name": "todo-node",
    "scripts": {
        "build": "rm -rf ./build && ./node_modules/typescript/bin/tsc -b --verbose",
        "database:feed": "node -r ts-node/register src/scripts/feed-database/index.ts",
        "lint": "eslint --ignore-path .gitignore . --ext .js,.ts",
        "lint:fix": "npm run lint -- --fix",
        "prepare": "husky install",
        "start": "node build/index.js",
        "watch": "nodemon --exec node --inspect=0.0.0.0:56745 -r ts-node/register src/index.ts"
    },
    "version": "1.0.0"
}
